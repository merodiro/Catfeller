.navbar
  background $dark-color
  color $light-color
  font-family $special-font
  padding-top 20px
  position fixed
  width 100%
  z-index 3
  ul
    float right
    margin 0 0 15px
    +below('s')
      margin 10px
      text-align center
      width 100%
    li
      display inline
      list-style none
      margin 0 15px
      +below('s')
        span(1/3)
        text-align center
      a
        color $light-color
        text-decoration none
        &:hover,
        &.active
          color $main-color
  h2
    color $main-color
    text-transform uppercase
    float left
    font-family $special-font
    margin 0 0 15px
    +below('s')
      margin 0
      text-align center
      center()
