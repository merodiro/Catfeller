.services
  .special-heading
    margin-bottom 50px

  .service
    stack()
    +above('m')
      column(1/2, $cycle: 2)
    +above('xl')
      column(1/3, $cycle: 3)
    margin-bottom 15px
  .content
    column(3/4)
  .icon
    margin-top 50px
    column(1/4)
    color $main-color
    font-size 60px
    text-align center
    +below('m')
      margin-top 40px
