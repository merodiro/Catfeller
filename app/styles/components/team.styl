.our-team
  // padding 30px
  .text
    stack()
    margin-bottom 30px
    +above('m')
      column(1/2)
    +above('l')
      column(2/7)

  .members
    stack()
    +above('m')
      column(1/2)
    +above('l')
      column(5/7)
  .member
    column(1/2, $cycle: 2, $gutter: 5)
    margin-bottom 15px
    position relative
    +above('l')
      column(1/4, $cycle: 4)
      margin-bottom 0

    .overlay
      background-color rgba($main-color, .5)
      opacity 0
      text-align center
      transition: all .5s easing("in-out-quad")
      vertical-align center
      &:hover
        opacity 1
      span
        align(both)
        color $light-color
        display inline-block
        font-family $roboto
        font-size 25px
    img
      width 100%
